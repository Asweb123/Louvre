{% extends 'base.html.twig' %}

{% block title %}Billetterie{% endblock %}

{% block content %}

<section class="container mb-5">

    <h1 class="h4  text-center mt-5 mb-4 ">Billetterie<br /><small class="text-muted d-md-none">Etape 3/5 : récapitulatif</small></h1>

    <nav class="d-none d-md-block mt-5">
        <ul class="my-breadcrumb">
            <li><a href="#">Réservation</a></li>
            <li><a href="#">Bénéficiaire</a></li>
            <li><a href="#">Résumé</a></li>
            <li><a href="#">Paiement</a></li>
            <li><a href="#">Confirmation</a></li>
        </ul>
    </nav>



    <table class="table">
        <thead class="table-headBorder">
        <tr>
            <th class="table-headBorder" scope="col">Billets</th>
            <th class="table-headBorder" scope="col">Prix</th>
        </tr>
        </thead>
        <tbody>

        {% for ticket  in  order.ticketsList  %}


        <tr>


            <td>{{ ticket.pricing }}<br/>
                Bénéficiaire :{{ ticket.firstName }} {{ ticket.lastName }}<br/>
                Date de visite : {{ order.bookingDate|date('Y/m/d') }}<br/>Type de billet : {% if order.ticketType == 1 %} Full day {% elseif order.ticketType == 2 %} Half-day {% endif %}
            </td>
            <td> {{ ticket.price }}</td>
        </tr>
        {% endfor %}

        <tr>


            <td class="font-weight-bold">Total :
            <td class="font-weight-bold"> {{ order.totalPrice }}</td>
        </tr>


        </tbody>
    </table>

    <div class="text-center">
        <a href="{{ path('ticketing_payment') }}">
            <button type="button" class="btn btn-outline-dark btn-lg mb-5 btn-louvre font-weight-bold">Payer</button>
        </a>
    </div>

</section>

{% endblock %}
