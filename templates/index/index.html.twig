{% extends 'base.html.twig' %}

{% block title %}{{ 'Musée du Louvre'|trans }}{% endblock %}

{% block content %}

    <section class="container-fluid">

        <h1 class="text-center display-4 mb-3">{{ 'Musée du Louvre'|trans }}</h1>
        <h2 class="text-center display-4 mb-5 subTitle">{{ '- Billetterie -'|trans }}</h2>


        <p class="text-center priceTitle">{{ 'Les tarifs'|trans }}</p>
        <div class="pricing-switcher text-center">
            <p class="fieldset-s">
                <input type="radio" name="duration" value="full-day" id="full-day" checked>
                <label for="full-day">{{ 'Journée'|trans }}</label>
                <input type="radio" name="duration" value="half-day" id="half-day">
                <label for="half-day">{{ 'Demi-Journée'|trans }}</label>
                <span class="switch"></span>
            </p>
        </div>


        <div class="tickets-list mb-5">
            <div class="scene">
                <div class="scene-card">
                    <div class="card text-center box-shadow card-face card-front">
                        <div class="card-header card-normal">
                            {{ 'Billet Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img2.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Normal'|trans }}</h5>
                            <p class="card-text card-price">{{ basePrice }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'A partir de 12 ans'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 9h'|trans }}</li>
                        </ul>
                    </div>

                    <div class="card text-center box-shadow card-face card-back">
                        <div class="card-header card-normal">
                            {{ 'Billet Demi-Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img10.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Normal'|trans }}</h5>
                            <p class="card-text card-price">{{ basePrice/2 }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'A partir de 12 ans'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 14h'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="scene">
                <div class="scene-card">
                    <div class="card text-center box-shadow card-face card-front">
                        <div class="card-header card-child">
                            {{ 'Billet Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img1.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Enfant'|trans }}</h5>
                            <p class="card-text card-price">{{ childrenPrice }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'A partir de 4 ans'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 9h'|trans }}</li>
                        </ul>
                    </div>

                    <div class="card text-center box-shadow card-face card-back">
                        <div class="card-header card-child">
                            {{ 'Billet Demi-Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img13.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Enfant'|trans }}</h5>
                            <p class="card-text card-price">{{ childrenPrice/2 }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'A partir de 4 ans'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 14h'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="scene">
                <div class="scene-card">
                    <div class="card text-center box-shadow card-face card-front" style="height: 464.734px">
                        <div class="card-header card-baby">
                            {{ 'Billet Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img7.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Tout-Petit'|trans }}</h5>
                            <p class="card-text card-price-text pt-3">{{ 'Gratuit'|trans }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'Moins de 4 ans'|trans }}</li>
