                    <div class="card text-center box-shadow card-face card-front">
                        <div class="card-header card-reduc">
                            {{ 'Billet Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img3.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Réduit'|trans }}</h5>
