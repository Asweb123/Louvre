                    </div>

                    <div class="card text-center box-shadow card-face card-back">
                        <div class="card-header card-senior">
                            {{ 'Billet Demi-Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img11.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Senior'|trans }}</h5>
                            <p class="card-text card-price">{{ seniorPrice/2 }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'A partir de 60 ans'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 14h'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
