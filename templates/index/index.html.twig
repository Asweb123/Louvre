                        </ul>
                    </div>

                    <div class="card text-center box-shadow card-face card-back" style="height: 464.734px">
                        <div class="card-header card-baby">
                            {{ 'Billet Demi-Journée'|trans }}
                        </div>
                        <img src="{{ asset('img/img8.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Tout-Petit'|trans }}</h5>
                            <p class="card-text card-price-text pt-3">{{ 'Gratuit'|trans }}</p>
