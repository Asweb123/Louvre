                        </div>
                        <img src="{{ asset('img/img12.jpg') }}" alt="Bronze" style="width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ 'Tarif Réduit'|trans }}</h5>
                            <p class="card-text card-price">{{ reducedPrice/2 }} €</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ 'Etudiant, militaire... *'|trans }}</li>
                            <li class="list-group-item">{{ 'A partir de 14h'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mb-5">
            <a href="{{ path('ticketing_booking') }}">
                <button type="button" class="btn btn-outline-dark btn-lg btn-louvre font-weight-bold">{{ 'Commander'|trans }}</button>
            </a>
        </div>


        <p class="text-reduc font-italic text-center mb-5">{{ '* Tarif réduit accordé aux étudiants de moins de 26 ans, militaires, demandeurs d\'emploi, employés du musée ou d\'un service du Ministère de la Culture.'|trans }}</p>

    </section>

{% endblock %}
